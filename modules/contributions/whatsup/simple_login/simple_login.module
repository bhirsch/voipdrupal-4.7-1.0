/*
 * Returns an array of items that include 'name' and either 'value' or 'description'
 */
function _simple_login_get_registration_certificate_items($form_values = NULL, $account = NULL) {
  
  global $base_url;
  global $user;
  if (!isset($account)) {
    $account = $user;
  }
  	
  $items = array();
  // add the default items
  $items['uid'] = array('description' => t('for the user id'));
  $items['name'] = array('description' => t('for the user name'));
  $items['email'] = array('description' => t('for the user email address'));
  $items['pass'] = array('description' => t('for the user password'));
  $items['site'] = array('description' => t('for the site name'));
  $items['site_url'] = array('description' => t('for the site URL'));
  $items['date'] = array('description' => t('fir the current date'));
  $items['login_url'] = array('description' => t('for the login URL'));
  $items['edit_url'] = array('description' => t('for the edit URL'));

    $items['uid']['value'] = $account->uid;
    $items['name']['value'] = $account->name;
    $items['email']['value'] = isset($account->mail)?$account->mail:t('not provided');
    $items['pass']['value'] = isset($form_values['pass'])?$form_values['pass']:t('not available') . print_r($form_values, TRUE);
    $items['site']['value'] = variable_get('site_name', 'drupal');
    $items['site_url']['value'] = $base_url;
    $items['date']['value'] = format_date(time());
    $login_url = url('user', NULL, NULL, TRUE);
    $items['login_url']['value'] = l($login_url, $login_url);
    $edit_url = url('user/'. $account->uid .'/edit', NULL, NULL, TRUE);
    $items['edit_url']['value'] = l($edit_url, $edit_url);
   
  foreach (module_implements('simple_login_get_registration_certificate_items') as $module) {
    $new_items = module_invoke($module, 'simple_login_get_registration_certificate_items', $form_values, $account);
    if ($new_items) {
      $items = array_merge($items, $new_items);
    }
  }
  return $items;
}

